@model Entities.Product

<h3>Create Product</h3>

<div class="col-lg-6">
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" placeholder="Name..."/>
    </div>
    
    <div class="mb-3">

        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" placeholder="0.00"/>
    </div>
    <div class="mb-3">
        <label asp-for="Discount"></label>
        <input class="form-control" asp-for="Discount" placeholder="0"/>
    </div>

    <div class="mb-3">
        <label asp-for="Rating"></label>
        <input class="form-control" asp-for="Rating" />
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.CategoryId"></select>
    </div>
    <div class="mb-3">
        <label asp-for="IsComplect"></label>
        <input  asp-for="IsComplect" />
    </div>
    <div class="mb-3 ">
        <label asp-for="IsFeatured"></label>
        <input asp-for="IsFeatured" />
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea rows="5" class="form-control" asp-for="Description" placeholder="Description"></textarea>
    </div>
    <div>
        <input type="submit" class="btn btn-success" value="Add Product"/>
    </div>

</form>
</div>
